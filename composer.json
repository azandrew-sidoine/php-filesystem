{
    "name": "drewlabs/filesystem",
    "description": "Provide OOP interface for working with files and directory",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "league/flysystem-adapter-test-utilities": "^2.1",
        "league/flysystem-sftp": "^3.0",
        "league/flysystem-aws-s3-v3": "^3.0",
        "league/flysystem-ftp": "^3.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Drewlabs\\Filesystem\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {},
        "classmap": [
            "./tests"
        ]
    },
    "authors": [
        {
            "name": "azandrew-sidoine",
            "email": "asmyns.platonnas29@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "symfony/finder": "^5.3|^6.3",
        "league/flysystem": "^2.2|^3.0"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}